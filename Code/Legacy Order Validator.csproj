<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>Legacy_Order_Validator</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>APSLOGO.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Backgrounds.txt" />
    <None Remove="Units.txt" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="APSLOGO.ico" />
    <Content Include="Units.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="Backgrounds.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ClosedXML" Version="0.105.0" />
    <PackageReference Include="ExcelMapper" Version="6.0.612" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="View Units.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>

</Project>